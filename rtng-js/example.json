{
  "metadata": {
    "title": "example.json",
    "author": "Michael Kubina",
    "description": "a small example schema for RTNG.js"
  },
  "0-to-100": {
    "title":  "A number from 0 to 100",
    "@sequence": [
      {
        "number": {
          "min": 0,
          "max": 100,
          "picks": 1
        }
      }
    ]
  },
  "3-colors": {
    "title": "Three colors from a list of ten",
    "@sequence": [
      {
        "string": {
          "list": [
            "red",
            "green",
            "blue",
            "yellow",
            "cyan",
            "magenta",
            "purple",
            "pink",
            "black",
            "white"
          ],
          "picks": 3,
          "unique": true,
          "punctuation": ",",
          "conjunction": "and"
        }
      }
    ]
  },
  "number": {
    "title": "A random percentage",
    "any-percent": {
      "@sequence": [
        {
          "template": "0-to-100"
        },
        {
          "raw": "%"
        }
      ]
    }
  },
  "text": {
    "title": "A phrase with two varying text snippets",
    "favourite-color": {
      "@sequence": [
        {
          "raw": "Let me think about it... I am"
        },
        {
          "template": "number.any-percent"
        },
        {
          "raw": "sure that"
        },
        {
          "template": "3-colors"
        },
        {
          "raw": "are my favourite colors!"
        }
      ]
    }
  }
}